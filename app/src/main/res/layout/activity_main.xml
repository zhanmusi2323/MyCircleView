<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="stickygridheadersexample.tonicartos.com.mycircleview.MainActivity">

    <stickygridheadersexample.tonicartos.com.mycircleview.view.MyCircleView
        android:id="@+id/cicler_view1"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <stickygridheadersexample.tonicartos.com.mycircleview.view.MyCircleView
        android:id="@+id/cicler_view2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp" />

    <stickygridheadersexample.tonicartos.com.mycircleview.view.MyCircleView
        android:id="@+id/cicler_view3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp" />

    <stickygridheadersexample.tonicartos.com.mycircleview.view.MyCircleView
        android:id="@+id/cicler_view4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp" />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        android:progress="60"
        android:indeterminateDrawable="@drawable/progress_bar"
        />

</LinearLayout>
